<?xml version="1.0" encoding="UTF-8"?>
<configuration status="OFF">  
    <appenders>  
        <console name="console" target="SYSTEM_OUT">  
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %level [%logger{36}]: %msg%n" />  
        </console>
    </appenders>
    <loggers>
        <root level="info">
            <appender-ref ref="console" />
        </root>
    </loggers>
</configuration>